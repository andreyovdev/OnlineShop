@{
    ViewData["Title"] = "BikeOrbit";
}

@section PageStyles {
    <link rel="stylesheet" href="~/css/Home/CategoriesSection.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/Home/HeroSection.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/Home/HeroVideo.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/Home/VideoSection.css" asp-append-version="true" />
}
@section PageScripts {
    <script src="~/js/Home/Home.js" asp-append-version="true"></script>
    <script src="~/js/Home/HomeAnimations.js" asp-append-version="true"></script>
}
<div class="home-page">
    <div class="hero">
        <div class="hero-video-container">
            <div class="hero-video">
                <div style="width: 100%; height: 100%;">
                    <video disablePictureInPicture src="~/videos/home_page_video.mp4" preload="auto" muted autoplay="" loop="" style="width: 100%; height: 100%;"></video>
                </div>
            </div>
            <div class="hero-text">
                <h1>Ride Beyond Limits</h1>
                <h2>Where the Journey Begins with the Perfect Ride</h2>
            </div>
            <a asp-controller="Shop" asp-action="Index" asp-route-pg="1" asp-route-input="@ViewData["SearchProductInput"]" class="shop-now-btn">Explore</a>
        </div>
        <div class="hero-heading-container">
            <h1 class="hero-title">The Best Choice</h1>
            <h2 class="hero-subtitle">Explore the Trending Bike Collection that Redefines Adventure</h2>
        </div>
        <div class="video-container">
            <div class="video-card">
                <a asp-controller="Shop" asp-action="ProductDetails" asp-route-id="18229F0C-42ED-45A1-ADD4-F625C97F676B" >
                    <div style="width: 100%; height: 119.9%;">
                        <video disablePictureInPicture src="~/videos/home_page_video_card_1.mp4" preload="auto" muted autoplay="" loop="" style="width: 100%; height: 100%;">
                        </video>

                    </div>
                    <h3>Sky Factor</h3>
                </a>
            </div>
            <div class="video-card">
                <a asp-controller="Shop" asp-action="ProductDetails" asp-route-id="92210C0E-91B7-4DD5-B4D5-03FE3EDF522C" >
                    <div style="width: 100%; height: 119.9%;">
                        <video disablePictureInPicture src="~/videos/home_page_video_card_2.mp4" preload="auto" muted autoplay="" loop="" style="width: 100%; height: 100%;">
                        </video>

                        </div>
                    <h3>AeroVibe Elite </h3>
                </a>
            </div>
            <div class="video-card">
                <a asp-controller="Shop" asp-action="ProductDetails" asp-route-id="7FAC8FDF-3076-40E7-965C-D35A86C35EDC">
                    <div style="width: 100%; height: 119.9%;">
                        <video disablePictureInPicture src="~/videos/home_page_video_card_3.mp4" preload="auto" muted autoplay="" loop="" style="width: 100%; height: 100%;">
                        </video>

                    </div>
                    <h3>Trail Blazer</h3>
                </a>
            </div>
            <div class="video-card">
                <a asp-controller="Shop" asp-action="ProductDetails" asp-route-id="A2180FFC-5FDA-46FA-AC5B-612E1BF2A4E0" >
                    <div style="width: 100%; height: 119.9%;">
                        <video disablePictureInPicture src="~/videos/home_page_video_card_4.mp4" preload="auto" muted autoplay="" loop="" style="width: 100%; height: 100%;">
                        </video>

                    </div>
                    <h3>Cosmic 5000</h3>
                </a>
            </div>
        </div>
        <div>
            <h1 class="categories-heading">What is Your Type?</h1>
            <div class="categories-container">
                <a class="category-card">
                    <h3>BMX</h3>
                    <div class="img-cont">
                        <img src="/images/home/category_bmx.jpg" alt="category">
                    </div>
                </a>
                <a class="category-card">
                    <h3>Mountain</h3>
                    <div class="img-cont">
                        <img src="/images/home/category_mountain.jpg" alt="category">
                    </div>
                </a>
                <a class="category-card">
                    <h3>Road</h3>
                    <div class="img-cont">
                        <img src="/images/home/category_road.jpg" alt="category">
                    </div>
                </a>
            </div>
        </div>
    </div>
</div>
